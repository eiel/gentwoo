<h2><%= @pkgs.first.category %>/<%= @pkgs.first.name %></h2>
<%= render(:partial => "detailview" ) %>

<% @pkgs.each do |pkg| %>
<h3><a name="<%= pkg.version %>"><%= pkg.version %></a></h3>
<%= average(pkg) %>
<%= render(:partial => "emerges",
           :object => pkg.emerges.order("buildtime DESC").limit(10),
           :locals => {:needuser => true}) %>
<% end %>

<div id="packages_gentoo">
  <a href="http://packages.gentoo.org/package/<%= @pkgs.first.category %>/<%= @pkgs.first.name %>"><%= t(:viewin_packages)%></a>
</div>
