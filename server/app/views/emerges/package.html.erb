<h2><%= @pkgs.first.category %>/<%= @pkgs.first.name %></h2>
<%= render(:partial => "detailview" ) %>

<% @pkgs.each do |pkg| %>
<h3><%= pkg.version %></h3>
<%= average(pkg) %>
<%= render(:partial => "emerges",
           :object => pkg.emerges.order("buildtime DESC"),
           :locals => {:needuser => true}) %>
<% end %>

<div id="packages_gentoo">
  <a href="http://packages.gentoo.org/package/<%= @pkgs.first.category %>/<%= @pkgs.first.name %>">Gentoo Packagesで見る</a>
</div>
