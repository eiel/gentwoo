<h2><%= @pkgs.first.category %>/<%= @pkgs.first.name %></h2>

<% @pkgs.each do |pkg| %>
<h3><%= pkg.version %></h3>
<table>
<tr><td>日時</td><td></td><td>所用時間</td></tr>
<% pkg.emerge.each do |emerge| %>
<tr>
  <td><%= emerge.buildtime.to_s(:jp) %></td>
  <td><%= link_to emerge.user.name, emerge.user.link %>さんが
    <%= link_to emerge.package.fullname, emerge.package.page %>をemergeしました。</td>
  <td><%= viewDuration(emerge.duration) %></td>
  <td><%= link_to "詳細", emerge.page %></td>
</tr>
<% end %>
</table>
<% end %>
